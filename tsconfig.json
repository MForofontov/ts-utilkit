{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "lib": ["es2023", "dom"],
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@ts-utilkit/array": ["packages/array/src"],
      "@ts-utilkit/async": ["packages/async/src"],
      "@ts-utilkit/collection": ["packages/collection/src"],
      "@ts-utilkit/configuration": ["packages/configuration/src"],
      "@ts-utilkit/crypto": ["packages/crypto/src"],
      "@ts-utilkit/date": ["packages/date/src"],
      "@ts-utilkit/encoding": ["packages/encoding/src"],
      "@ts-utilkit/event": ["packages/event/src"],
      "@ts-utilkit/format": ["packages/format/src"],
      "@ts-utilkit/math": ["packages/math/src"],
      "@ts-utilkit/network": ["packages/network/src"],
      "@ts-utilkit/object": ["packages/object/src"],
      "@ts-utilkit/parsing": ["packages/parsing/src"],
      "@ts-utilkit/random": ["packages/random/src"],
      "@ts-utilkit/regex": ["packages/regex/src"],
      "@ts-utilkit/serialization": ["packages/serialization/src"],
      "@ts-utilkit/string": ["packages/string/src"],
      "@ts-utilkit/testing-utilities": ["packages/testing-utilities/src"],
      "@ts-utilkit/utility": ["packages/utility/src"],
      "@ts-utilkit/validation": ["packages/validation/src"],
      "@ts-utilkit/webscraping": ["packages/webscraping/src"]
    }
  },
  "include": [
    "index.ts",
    "packages/*/src/**/*"
  ],
  "exclude": ["dist", "node_modules", "packages/*/tests/**/*"]
}
