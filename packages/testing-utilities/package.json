{
  "name": "@ts-utilkit/testing-utilities",
  "version": "0.1.0",
  "description": "Testing utilities and helpers for writing comprehensive unit tests with TypeScript and Jest",
  "homepage": "https://github.com/mykfor1/ts-utilkit/tree/main/packages/testing-utilities#readme",
  "bugs": {
    "url": "https://github.com/mykfor1/ts-utilkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MForofontov/ts-utilkit.git",
    "directory": "packages/testing-utilities"
  },
  "license": "MIT",
  "author": "MForofontov",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "test:watch": "jest --config jest.config.ts --watch",
    "lint": "eslint src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "publish:dry": "npm publish --dry-run",
    "publish": "npm publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "testing",
    "utilities",
    "jest",
    "test-helpers",
    "typescript",
    "unit-testing",
    "test-data",
    "mocking"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
